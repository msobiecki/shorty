{
  "name": "shorty",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "install": "npm-run-all --parallel install:*",
    "install:client": "cd client && npm install",
    "install:shorty": "cd shorty-service && npm install",
    "start": "npm-run-all --parallel start:*",
    "start:client": "cd client && npm run start",
    "start:shorty": "cd shorty-service && npm run start",
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "cd client && npm run start",
    "dev:shorty": "cd shorty-service && npm run dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "(shorty-service/server/**/*.{js,json,md}|shorty-service/app.js)": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
